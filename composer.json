{
    "name": "trs/router",
    "description": "A lightweight and simple object oriented PHP Router based on bramus/router",
    "keywords": ["router", "routing"],
    "homepage": "https://tomroberts.uk/projects/router",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Roberts",
            "email": "tom@tomroberts.uk",
            "homepage": "https://tomroberts.uk"
        },
        {
            "name": "Bram(us) Van Damme",
            "email": "bramus@bram.us",
            "homepage": "http://www.bram.us"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "phpunit/php-code-coverage": "~2.0",
        "friendsofphp/php-cs-fixer": "~2.14"
    },
    "autoload": {
        "psr-0": {"TRS": "src/"}
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix"
    }
}